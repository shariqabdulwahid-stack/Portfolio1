<%- include ./partials/header.ejs %>
<%- include ./partials/main_nav.ejs %>

<main class="container py-5 pb-5">
  <h1 class="mb-4"><%= title %></h1>
  <p>If you'd like to connect, feel free to reach out using the form below or via LinkedIn or GitHub in the footer.</p>

  <form>
    <div class="mb-3">
      <label for="name" class="form-label">Your Name</label>
      <input type="text" class="form-control" id="name" placeholder="John Doe">
    </div>
    <div class="mb-3">
      <label for="email" class="form-label">Your Email</label>
      <input type="email" class="form-control" id="email" placeholder="you@example.com">
    </div>
    <div class="mb-3">
      <label for="message" class="form-label">Message</label>
      <textarea class="form-control" id="message" rows="4" placeholder="Let's collaborate!"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Send Message</button>
  </form>
</main>

<%- include ./partials/footer.ejs %>
